{
  "name": "packet-pilot",
  "description": "AI-powered network packet analyzer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:sidecar": "cd sidecar && ./build.sh",
    "build:sidecar:win": "powershell -ExecutionPolicy Bypass -File sidecar/build.ps1",
    "build:sharkd": "./scripts/bundle-sharkd.sh",
    "build:sharkd:win": "powershell -ExecutionPolicy Bypass -File scripts/bundle-sharkd.ps1",
    "build:binaries": "npm run build:sidecar && npm run build:sharkd",
    "build:binaries:win": "npm run build:sidecar:win && npm run build:sharkd:win",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build": "npm run build:binaries && tauri build",
    "tauri:build:win": "npm run build:binaries:win && tauri build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
